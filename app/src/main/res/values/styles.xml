<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- No action bar application theme. -->
    <style name="NoBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomLoginTitle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">70sp</item>
    </style>

    <style name="MainTitle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>